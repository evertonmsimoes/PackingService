{
  "openapi": "3.0.4",
  "info": {
    "title": "PackingService.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Package/box": {
      "post": {
        "tags": [
          "Package"
        ],
        "summary": "Retorna as melhores caixas para o pedido.",
        "description": "Esse endpoint retorna uma lista com as melhores caixas e a disposição ideal dos produtos para cada pedido enviado.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrdersRequestDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/OrdersRequestDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/OrdersRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DimensionDTO": {
        "type": "object",
        "properties": {
          "altura": {
            "type": "integer",
            "format": "int32"
          },
          "largura": {
            "type": "integer",
            "format": "int32"
          },
          "comprimento": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "OrderDTO": {
        "type": "object",
        "properties": {
          "pedido_id": {
            "type": "integer",
            "format": "int32"
          },
          "produtos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "OrdersRequestDTO": {
        "type": "object",
        "properties": {
          "pedidos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProductDTO": {
        "type": "object",
        "properties": {
          "produto_id": {
            "type": "string",
            "nullable": true
          },
          "dimensoes": {
            "$ref": "#/components/schemas/DimensionDTO"
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}